# Variáveis de ambiente para a API (produção)
# Copie este arquivo para .env e configure os valores

# Banco de Dados PostgreSQL
DATABASE_URL=jdbc:postgresql://seu-host:5432/seu-banco?sslmode=require
DATABASE_USERNAME=seu_usuario
DATABASE_PASSWORD=sua_senha_segura

# Servidor
SERVER_PORT=8080

# JPA
JPA_DDL_AUTO=validate
SHOW_SQL=false

# CORS - origens permitidas (separar por vírgula)
CORS_ORIGINS=https://seudominio.com,https://www.seudominio.com

# Swagger - desabilitar em produção
SWAGGER_ENABLED=false

# Admin inicial
ADMIN_DEFAULT_PASSWORD=sua_senha_admin_segura
