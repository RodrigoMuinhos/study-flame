# =============================================
# CRM FLAME - Neon Database Configuration
# =============================================
# 
# Configure estas vari√°veis de ambiente para conectar ao Neon PostgreSQL
# Copie este arquivo para .env.local e preencha os valores

# ===== NEON DATABASE =====
# Obtenha sua connection string do Neon Dashboard
DATABASE_URL=postgresql://[user]:[password]@[host]/[database]?sslmode=require
DATABASE_USERNAME=seu_usuario_neon
DATABASE_PASSWORD=sua_senha_neon

# ===== APPLICATION CONFIG =====
SERVER_PORT=8080
JPA_DDL_AUTO=validate
SHOW_SQL=false

# ===== CORS =====
# Adicione as URLs do seu frontend
CORS_ORIGINS=http://localhost:3000,https://seu-frontend.vercel.app

# ===== SWAGGER =====
SWAGGER_ENABLED=true

# ===== PROFILE =====
SPRING_PROFILES_ACTIVE=prod
